{
  "name": "pokemon-deck",
  "version": "0.0.0",
  "main": "app.js",
  "description": "Pokemon card selector native os",
  "author": {
    "name": "Dennis Oliveira",
    "description":""
  },
  "scripts": {
    "ng": "ng",
    "start": "ng build --base-href ./ && electron . --icon=src/assets/image/logo.png",
    "build": "ng build --base-href ./ ",
    "build-optmized": "ng build --base-href ./ --optimization --aot",
    "serve": "ng serve",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "prebuild-prod": "npm run build-optmized",
    "build-prod": "electron-packager ./ PokemonDeck --platform=win32 --arch=x64 --overwrite",
    "prerelease": "npm run build",
    "release": "electron-builder",
    "forge-release":"electron-forge make"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@igniteui/angular-schematics": "^17.1.1311",
    "@igniteui/material-icons-extended": "^3.0.2",
    "fflate": "^0.7.3",
    "g": "^2.0.1",
    "hammerjs": "^2.0.8",
    "igniteui-angular": "^17.0.7",
    "igniteui-cli": "^13.1.1",
    "loadash": "^1.0.0",
    "lodash": "^4.17.21",
    "minireset.css": "~0.0.4",
    "ngx-electron": "^2.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.1",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.6",
    "@angular/cli": "^17.0.6",
    "@angular/compiler-cli": "^17.0.0",
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@types/hammerjs": "^2.0.40",
    "@types/jasmine": "~5.1.0",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.2.2"
